<div class = "show-container">
  <div class = "shows">
    <%= form_for [@company, @job] do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :level_of_interest %>
      <%= f.number_field :level_of_interest %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :category %>
      <%= f.select :category_id, options_for_select( @category.collect{ |category| ["#{category.name}", category.id] } ), class: 'form-control' %>

      <%= f.submit %>
    <% end %>
  </div>
</div>
