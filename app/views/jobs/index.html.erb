<h3>All Jobs for <strong><%= @company.name %></strong></h3>


<article >
  <div class = "new-button" >
    <li class = "list-group-item"> <%=link_to "New job", new_company_job_url%></li>
  </div>
  <div class = "cards">
    <% @jobs.each do |job| %>
      <ul class="list-group list-group-cat">
        <li class=job_ <%= job.id %>>
        <li class ="cat-head"> <%= link_to job.title,company_job_path( job.company.id, job.id) %>:</li>
        <li class ="list-group-item "> <%= link_to "Edit", edit_company_job_path(job.company.id, job.id) %></li>
        <li class ="list-group-item "> <%= link_to "Delete", company_job_path(job.company.id, job.id), method: "delete" %></li>
      </ul>
    <% end %>
</div>

<article class = 'contacts'>
  <div class ="list-group-contact">
    <h5>Create a contact for </h5>
    <h5><%=@company.name%></h5>
    <%=form_for [@company, @contact] do |f| %>
      <%= f.label :name  %>
      <%= f.text_field :name  %>
      <%= f.label :position  %>
      <%= f.text_field :position  %>
      <%= f.label :email  %>
      <%= f.text_field :email  %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

    <%@contacts.each do |contact|%>
    <div class ="list-group-contact-show">
      <li>Contact</li>
      <li class =""><%= contact.name%></li>
      <li class =" "><%=contact.position%></li>
      <li class =" "><%=contact.email%></li>
      <li class ="list-group-item "><%= link_to "Edit", edit_company_contact_path(@company.id,contact.id) %></li>
      <li class ="list-group-item "> <%= link_to "Delete", company_contact_path(@company.id,contact.id), method: "delete" %></li>
      <br>
    </div>
    <% end %>
</article>

</article>
